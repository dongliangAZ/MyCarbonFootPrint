<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:paddingTop="25sp"
            android:layout_gravity="center"
            android:src="@drawable/car"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/car_mpg"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:paddingTop="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Car Miles Per Gallon" />

        <EditText
            android:id="@+id/miles_driven"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Miles Driven Today" />

        <Button
            android:id="@+id/button_calcTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calculate" />

        <TextView
            android:id="@+id/transportResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="50sp"
            android:paddingTop="10sp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:text=""/>

        <ImageView
            android:id="@+id/co2transport"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
